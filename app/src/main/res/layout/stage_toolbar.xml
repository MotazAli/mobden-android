<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stage_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/header">


    <ImageView
        android:id="@+id/stage_toolbar_action_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/stage_toolbar_header_title"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:fontFamily="serif"
        android:gravity="center|center_horizontal"
        android:text="طلائع المبدعين الاهلية للبنين"
        android:textColor="#F4EFEF"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/stage_sidebar_toolbar_logo_btn"
        android:layout_height="30dp"
        android:layout_width="30dip"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_action_sidebar" />


</androidx.appcompat.widget.Toolbar>